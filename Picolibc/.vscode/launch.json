{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug RISC-V (QEMU + GDB)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/hello-world-riscv.elf",
      "miDebuggerPath": "/usr/bin/gdb-multiarch",
